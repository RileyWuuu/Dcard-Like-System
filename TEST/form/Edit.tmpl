{{ define "Edit" }}
  {{ template "Header" }}
    {{ template "Menu" }} 
   <h2>Edit Member</h2>  
    <form method="post" action="Update">
      <input type="hidden" name="ID" value="{{ .ID }}" />
      <label> Name </label><input type="text" id="Name" name="Name" placeholder={{ .Name }} value={{ .Name }} ><br />
      <label> Gender </label>
        <input type="radio" id="Male" value="0" name="Gender" {{ .Male}}/><label for="Male">Male</label>
        <input type="radio" id="Female" value="1" name="Gender" {{ .Female}}/><label for="Female">Female</label><br />
      <label> ContactNumber </label><input type="text" id="ContactNumber" name="ContactNumber" placeholder={{ .ContactNumber }} value={{ .ContactNumber }}><br />
      <label> Email </label><input type="text" id="Email" name="Email" placeholder={{ .Email }} value={{ .Email }}><br />
      <input type="submit" value="Save user" />
    </form><br />    
  {{ template "Footer" }}
{{ end }}